<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseFontAttribute">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontRegular400" parent="BaseFontAttribute">
        <item name="android:fontFamily">@font/custom_regular</item>
    </style>

    <style name="FontMedium500" parent="BaseFontAttribute">
        <item name="android:fontFamily">@font/custom_medium</item>
    </style>

    <style name="FontSemiBold600" parent="BaseFontAttribute">
        <item name="android:fontFamily">@font/custom_semi_bold</item>
    </style>

    <style name="FontBold700" parent="BaseFontAttribute">
        <item name="android:fontFamily">@font/custom_bold</item>
    </style>

    <style name="FontExtraBold800" parent="BaseFontAttribute">
        <item name="android:fontFamily">@font/custom_extra_bold</item>
    </style>

    <style name="Sheet" parent="ThemeOverlay.Material3.BottomSheetDialog" />

    <style name="AmoledSheet" parent="ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <item name="colorSurfaceContainerLow">#000000</item>
    </style>

    <style name="BottomNavigationTextAppearanceActive" parent="FontSemiBold600">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="BottomNavigationTextAppearanceInactive" parent="FontRegular400">
        <item name="android:textColor">@color/muted8_878787</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="FontRegular400">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutTextAppearanceSelected" parent="FontMedium500">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonTint">@color/accent</item>
        <item name="android:theme">@style/FontRegular400</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
    </style>

    <style name="BaseLayoutAttributes">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BaseNestedScrollViewAttributes">
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TopPaddingStyle">
        <item name="android:paddingTop">30dp</item>
    </style>

    <style name="ToolbarTopStyle">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="RootLayoutStyle" parent="BaseLayoutAttributes">
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="NoBackGroundBottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageViewRadius16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12sdp</item>
    </style>

    <style name="CircleImageViewRadius12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="CircleImageViewRadius8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>

    <style name="RoundedRightCornerRadius16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/_12sdp</item>
        <item name="cornerSizeTopRight">@dimen/_12sdp</item>
    </style>

    <style name="NoStrokeAccentCardStyle">
        <item name="cardBackgroundColor">@color/accent</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BGPrimaryStrokeAccentCardStyle">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="cardElevation">@dimen/_3sdp</item>
    </style>

    <style name="NoStrokeTransparentCardStyle.Elevated" parent="NoStrokeAccentCardStyle">
        <item name="cardElevation">@dimen/_3sdp</item>
    </style>

    <style name="CustomClickableIcon" parent="BaseClickableIcon">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="contentPadding">@dimen/_6sdp</item>
        <item name="tint">@color/absolute_white</item>
    </style>

    <style name="BaseClickableIcon">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/bg_ripple_effect_accent_rounded</item>
    </style>

    <style name="CustomClickableText" parent="TextStyleFont600">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:foreground">@drawable/bg_ripple_effect_accent_rounded</item>
    </style>

    <style name="CustomSecondaryButtonLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:foreground">@drawable/bg_ripple_effect_accent_rounded</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
    </style>

    <style name="CustomPrimaryButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:insetTop">@dimen/_8sdp</item>
        <item name="android:insetBottom">@dimen/_8sdp</item>
        <item name="android:insetLeft">@dimen/_8sdp</item>
        <item name="android:insetRight">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:theme">@style/FontMedium500</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="CustomAccentButtonLL" parent="CustomSecondaryButtonLL">
        <item name="android:background">@drawable/bg_accent_button</item>
        <item name="android:foreground">@drawable/bg_ripple_effect_white_rounded</item>
    </style>

    <style name="CustomPrimaryButtonLL.Bordered" parent="CustomSecondaryButtonLL">
        <item name="android:background">@drawable/bg_primary_button_bor_accent</item>
    </style>

    <style name="CustomAccentButton" parent="CustomPrimaryButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/onAccent</item>
    </style>

    <style name="CustomNiceSwitch">
        <item name="switcher_icon_color">@color/primary</item>
        <item name="switcher_off_color">@color/bgRed</item>
        <item name="switcher_on_color">@color/bgGreen</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
    </style>

    <style name="CustomPrimaryButton.Bordered" parent="CustomPrimaryButton">
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/accent</item>
    </style>

    <style name="CustomLabelImageView">
        <item name="android:layout_width">@dimen/_11sdp</item>
        <item name="android:layout_height">@dimen/_11sdp</item>
        <item name="tint">@color/onPrimary</item>
    </style>

    <style name="CustomTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/bgGrey5_EFEFEF</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="cursorColor">@color/accent</item>
        <item name="cursorErrorColor">@color/bgRed</item>
        <item name="boxStrokeErrorColor">@color/bgRed</item>
        <item name="errorTextColor">@color/bgRed</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/fontHintColor</item>
        <item name="hintTextColor">@color/accent</item>
        <item name="boxStrokeWidthFocused">@dimen/_2sdp</item>
    </style>

    <style name="CustomEditText" parent="TextStyleFont500">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="CustomDropdownLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:background">@drawable/bg_primary_bor_accent_cor_8</item>
        <item name="android:foreground">@drawable/bg_ripple_effect_accent_bor_8</item>
    </style>

    <style name="CustomSliderView">
        <item name="sliderAnimationDuration">600</item>
        <item name="sliderAutoCycleDirection">right</item>
        <item name="sliderAutoCycleEnabled">true</item>
        <item name="sliderIndicatorAnimationDuration">600</item>
        <item name="sliderIndicatorGravity">center_horizontal|bottom</item>
        <item name="sliderIndicatorMargin">@dimen/_15sdp</item>
        <item name="sliderIndicatorOrientation">horizontal</item>
        <item name="sliderIndicatorPadding">@dimen/_3sdp</item>
        <item name="sliderIndicatorRadius">@dimen/_2sdp</item>
        <item name="sliderIndicatorSelectedColor">@color/accent</item>
        <item name="sliderIndicatorUnselectedColor">@color/primaryA30</item>
        <item name="sliderScrollTimeInSec">8</item>
        <item name="sliderStartAutoCycle">true</item>
    </style>

    <style name="CustomVerticalDividerView">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_line_divider</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabRippleColor">@null</item>
        <item name="android:background">@null</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabPaddingStart">5dp</item>
        <!--        <item name="tabMinWidth">@dimen/_80sdp</item>-->
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextAppearance">@style/TabLayoutTextAppearanceSelected</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/muted7_7B7A7A</item>
    </style>

    <!--    more page styles-->

    <style name="MoreMainLLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/bg_ripple_effect_accent</item>
    </style>

    <style name="MoreInnerLLStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_11sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MoreEndImageView">
        <item name="android:layout_width">@dimen/_10sdp</item>
        <item name="android:layout_height">@dimen/_10sdp</item>
        <item name="tint">@color/onPrimary</item>
    </style>

    <style name="MoreImageView">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="contentPadding">@dimen/_4sdp</item>
        <item name="tint">@color/onPrimary</item>
    </style>

    <style name="MoreTitleTextView" parent="TextStyleFont500">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="MoreDescriptionTextView" parent="TextStyleFont400">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/_11sdp</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="MoreHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@color/fontTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:theme">@style/FontRegular400</item>
    </style>

    <style name="MoreDLView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/bg_dash_line</item>
    </style>

    <!--    Font styles-->
    <style name="TextStyleFont400">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:theme">@style/FontRegular400</item>
    </style>

    <style name="TextStyleFont500">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:theme">@style/FontMedium500</item>
    </style>

    <style name="TextStyleFont600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:theme">@style/FontSemiBold600</item>
    </style>

    <style name="TextStyleFont700">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:theme">@style/FontBold700</item>
    </style>

    <style name="TextStyleFont800">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:theme">@style/FontExtraBold800</item>
    </style>

    <style name="CollapsingToolbarExpandedTextStyle" parent="FontBold700">
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="CollapsingToolbarCollapsedTextStyle" parent="FontBold700">
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="CollapsingToolbarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/fontTextPrimary</item>
        <item name="android:background">@color/primary</item>
        <item name="contentScrim">@color/primary</item>
        <item name="collapsedTitleGravity">start</item>
        <item name="expandedTitleGravity">center_horizontal|bottom</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbarExpandedTextStyle</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsingToolbarCollapsedTextStyle</item>
    </style>

</resources>