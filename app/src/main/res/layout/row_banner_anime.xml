<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_banner_fade_layer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_spotlight"
        style="@style/TextStyleFont400"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingStart="@dimen/safe_zone_anime_page"
        android:paddingEnd="@dimen/safe_zone_anime_page"
        android:textColor="@color/whiteA80"
        android:textSize="@dimen/text_size_11"
        app:layout_constraintBottom_toTopOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="#1 Spotlight" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name"
        style="@style/TextStyleFont600"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:paddingStart="@dimen/safe_zone_anime_page"
        android:paddingEnd="@dimen/safe_zone_anime_page"
        android:textColor="@color/fontTextWhite"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toTopOf="@id/rl_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Tensei shitara Slime Datta Ken 3rd Season" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/rl_details"
        style="@style/CustomPrimaryButtonLL"
        android:layout_marginStart="@dimen/safe_zone_anime_page"
        android:layout_marginBottom="@dimen/safe_zone_anime_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextStyleFont400"
            android:text="@string/action_details" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:src="@drawable/ic_forward"
            app:tint="@color/onPrimary" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>