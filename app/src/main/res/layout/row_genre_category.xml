<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:background="@drawable/bg_primary_bor_accent_cor_16"
    android:elevation="@dimen/_3sdp"
    android:foreground="@drawable/bg_ripple_effect_accent_bor_16"
    tools:layout_marginBottom="@dimen/_8sdp"
    tools:layout_marginEnd="@dimen/_8sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_genre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_error_placeholder"
        app:shapeAppearanceOverlay="@style/CircleImageViewRadius16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_accent_layer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/bg_genre_layer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_genre"
        style="@style/TextStyleFont800"
        android:textColor="@color/genre_text_color"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Award Winning" />

</androidx.constraintlayout.widget.ConstraintLayout>